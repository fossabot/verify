{
  "name": "@rtapp/verify",
  "decription": "API server source code for the verify.madebythepins.tk.",
  "engines": {
    "node": "12.x"
  },
  "devDependencies": {
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "prettier": "^2.1.1"
  },
  "scripts": {
    "generate-toc:contributing": "markdown-toc -i --no-firsth1 CONTRIBUTING.md",
    "commit": "cz --signoff",
    "docs:init": "git submodule update --init",
    "docs:push": "git -C ${PWD}/docs push && git commit --signoff -m \"docs(global): Update HEAD for the docs subproject\" && git push origin"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RecapTime/verify"
  },
  "dependencies": {
    "markdown-toc": "^1.2.0",
    "yaml-schema-validator": "^1.2.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
